// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": [
        {
          "applyTo": "closedDocuments",
          "owner": "typescript",
          "source": "ts",
          "fileLocation": "absolute",
          "severity": "error",
          "pattern": [
            {
              "regexp": "\\[tsl\\] (ERROR|WARNING) in (.*)?\\((\\d+),(\\d+)\\)",
              "severity": 1,
              "file": 2,
              "line": 3,
              "column": 4
            },
            {
              "regexp": "\\s*TS(\\d+):\\s*(.*)$",
              "code": 1,
              "message": 2
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": {
              "regexp": "webpack is watching the filesâ€¦"
            },
            "endsPattern": {
              "regexp": "Built at.*"
            }
          }
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
